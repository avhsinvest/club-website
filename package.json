{
  "name": "avhs-investment-club",
  "description": "Investment Club at Amador Valley High School",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avhsinvest/club-website/"
  },
  "bugs": {
    "url": "https://github.com/avhsinvest/club-website/issues/"
  },
  "author": {
    "name": "AVHS Investment Club",
    "email": "amadorvalleyic@gmail.com"
  },
  "scripts": {
    "postinstall": "husky install",
    "compile": "mustache src/data.json src/template.mustache > public/index.html",
    "compile:watch": "npm-watch compile",
    "serve": "serve public",
    "start": "concurrently 'npm:compile:watch' 'npm:serve' -c 'blue.bold,green.bold'",
    "lint:staged": "lint-staged"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "markdownlint-cli": "^0.29.0",
    "mustache": "^4.2.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.4.1",
    "serve": "^13.0.2"
  },
  "watch": {
    "compile": {
      "patterns": [
        "src"
      ],
      "extensions": "mustache,json",
      "quiet": true
    }
  }
}
